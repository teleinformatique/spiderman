{% extends "::base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block page %}
    <div class="container-fluid">

        <div class="container ">
            {% if error %}
                
                <div class='alert alert-danger'>{{ error|trans({}, 'FOSUserBundle') }}</div>
                    <!--div>{#{ error.messageKey|trans(error.messageData, 'security') }#}</div-->
            {% endif %}
            <div class="col-sm-6 col-md-4 col-md-offset-4 background-formulaire form-connexion">
                
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <h2 class="text-center login-title"> Bienvenu dans Gest'Couture</h2>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input class="form-control" type="password" id="password" name="_password" required="required" />
                    </div>
                    <!--div class="form-group">
                    
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    <input class="form-control" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    </div-->    
                    <input type="submit" class="btn btn-success"id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </form>
                
            </div>
        </div>

    </div>
{% endblock %}
