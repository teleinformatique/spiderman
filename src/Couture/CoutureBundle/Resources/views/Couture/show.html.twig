{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Couture'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Couture</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Datec</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.datec|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Datemod</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.datemod|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Datefin</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.datefin|date('Y-m-d H:i:s') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Prix</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.prix }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Tissu</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.tissu }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Detail</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.detail }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Iduser</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.iduser }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Etat</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.etat }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('couture') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('couture_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('couture_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
        <a href="{{ path('facture_new', { 'id': entity.id }) }}"> Générer la facture </a>
</div>
{% endblock %}