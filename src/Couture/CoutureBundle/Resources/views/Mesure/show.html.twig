{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Mesure'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Mesure</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Cou</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.cou }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Poitrine</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.poitrine }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Taille</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.taille }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Ceinture</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.ceinture }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Longchemise</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.longchemise }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Longpantalon</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.longpantalon }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Longrobe</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.longrobe }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Manche</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.manche }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Hanche</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.hanche }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Epaule</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.epaule }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('mesure') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('mesure_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('mesure_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}