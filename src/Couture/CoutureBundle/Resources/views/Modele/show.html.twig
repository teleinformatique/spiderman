{#% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %#}
{% extends '::base.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Modele'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

    <div class="row">
            <div class="span12 alert alert-success"><h1 class="titre">Modèle : {{ entity.libelle }}</h1></div>
    </div>
    <div class="row">
        <div class="span5 ">
            <div class="panel panel-success background_infos">
                    <div class="panel-heading"><h3 class="panel-title">Informations du modèle</h3></div>
                    <div class="panel-body">

<form class="form-horizontal">
    <fieldset>        <!--div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div-->        <div class="control-group">
            <label class="control-label">Libelle</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.libelle }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Description</label>
            <div class="controls">                <span class="">pour bcp plus de détails comme test {{ entity.description }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Créé le</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.datec|date('d-M-Y') }}</span>            </div>
        </div>        <!--div class="control-group">
            <label class="control-label">Iduser</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.iduser }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Datemod</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.datemod|date('Y-m-d H:i:s') }}</span>            </div>
        </div>    <div class="control-group">
            <label class="control-label">Aperçu</label>
            <div class="controls">                <span class="image-responsive"><img src={{ asset ( entity.image.getWebPath()) }} /> </span>            </div>
        </div-->      </fieldset>
</form>
        </div>
        </div>
</div>
        <div class="span6 float-right">
            <div class="control-group">
                <!--label class="control-label">Aperçu</label-->
                <div class="controls">                <span class="image-responsive"><img src={{ asset ( entity.image.getWebPath()) }} /> </span>            </div>
            </div>
            
        </div>
             
        
        </div>
            
            <div class="row">
                <div class="panel panel-success">
                    <div class="panel-heading show-details"><h3 class="panel-title">Dernières Coutures de ce modèle <span class="badge">{{ coutures|length }}</span></h3></div>
                    <div class="panel-body">
                        <table class="table table-striped table-condensed table-details">
                            <tr>
                                <th>Date</th>
                                <th>Montant </th>
                                <th>Tissu </th>
                                
                                
                            </tr>
                            
                            {% for couture in coutures %}
                            <tr>
                                <td><a href="#">{{couture.datec|date('d-m-Y')}}</a></td>
                                <td>{{couture.prix}}</td>
                                <td>{{couture.tissu}}</td>
                            </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        

<div class="row">
    <div class="span12 bouton_action">
    <div class="float-left">
        <a class="btn" href="{{ path('modele') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('modele_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('modele_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
            </div>
{% endblock %}