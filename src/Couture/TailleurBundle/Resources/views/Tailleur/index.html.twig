{#% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %#}
{% extends '::base.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.index.list'|trans({'%entity%': 'Tailleur'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
    <div class="row">
        <div class="span12 alert alert-success"><h1 class="titre">Employ√©s </h1></div>
    </div>

<div class="row">

    <!--div class="span8">
        <h1>{{ 'views.index.list'|trans({'%entity%': 'Tailleur'}, 'JordiLlonchCrudGeneratorBundle') }}</h1>
    </div-->
    <div class="span2">
        {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="span2">
        <div class="filters-right">
            <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
                {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                <span class="caret"></span>
            </a>
        </div>
    </div>

    <div class="span12">
        <div id="filters" class="collapse">

            <form class="well" action="{{ path('tailleur') }}" method="get" {{ form_enctype(filterForm) }}>
                {{ form_row(filterForm.id) }}
                {{ form_row(filterForm.nom) }}
                {{ form_row(filterForm.prenom) }}
                {{ form_row(filterForm.telephone) }}
                {{ form_row(filterForm.email) }}
                {{ form_row(filterForm.login) }}
                {{ form_row(filterForm.password) }}
                {{ form_row(filterForm.dateembauche) }}
                {{ form_row(filterForm.salaire) }}
                {{ form_row(filterForm.user) }}
                {{ form_row(filterForm.datemod) }}
                {{ form_row(filterForm.iduser) }}
                {{ form_row(filterForm.datec) }}
                {{ form_rest(filterForm) }}

                <p>
                    <button type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    <button type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                </p>
            </form>
        </div>
    </div>

    <div class="span12">
        <div class="row">
        <div class="panel panel-success">
                    <div class="panel-heading"><h3 class="panel-title">La liste des Tailleurs <span class="badge">{{ entities|length }}</span></h3></div>
                    <div class="panel-body">
    <table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Login</th>
            <!--th>Password</th-->
            <th>Dateembauche</th>
            <!--th>Salaire</th-->
            <!--th>User</th-->
            <!--th>Datemod</th-->
            <!--th>Iduser</th-->
            <!--th>Datec</th-->
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('tailleur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.prenom }}</td>
            <td>{{ entity.telephone }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.username }}</td>
            <!--td>{#{ entity.password }#}</td-->
            <td>{% if entity.dateembauche %}{{ entity.dateembauche|date('Y-m-d H:i:s') }}{% endif %}</td>
            <!--td>{{ entity.salaire }}</td-->
            <!--td>{{ entity.user }}</td-->
            <!--td>{% if entity.datemod %}{{ entity.datemod|date('Y-m-d H:i:s') }}{% endif %}</td-->
            <!--td>{{ entity.iduser }}</td-->
            <!--td>{% if entity.datec %}{{ entity.datec|date('Y-m-d H:i:s') }}{% endif %}</td-->
            <td>
        <a class="btn btn-mini" href="{{ path('tailleur_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('tailleur_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>
    </div>
    </div>
    </div>

    <div class='row'>
    <div class="span4">
    {{ pagerHtml|raw }}
    </div>

        <div class="span8">
    <a class="btn btn-primary likepaginator" href="{{ path('tailleur_new') }}">
            {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Tailleur
        </a>
    </div>
    </div>

{% endblock %}